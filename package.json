{
    "name": "bip322",
    "version": "1.0.0",
    "description": "A Javascript library that provides utility functions related to the BIP-322 signature scheme",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "doc": "typedoc src/index.ts",
        "prepack": "npm run build",
        "test": "ts-mocha 'test/**/*.test.ts'",
        "test:coverage": "nyc --reporter=text --reporter=text-summary --reporter=lcov npm test"
    },
    "keywords": [
        "bip322",
        "bitcoinjs",
        "javascript",
        "typescript",
        "no-WASM"
    ],
    "author": "Ken Sze <acken2@outlook.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.3.5",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.2.5",
        "chai": "^4.3.7",
        "chai-bytes": "^0.1.2",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "ts-mocha": "^10.0.0",
        "typedoc": "^0.24.8",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "@bitcoinerlab/secp256k1": "^1.0.2",
        "bitcoinjs-lib": "^6.1.1",
        "bitcoinjs-message": "^2.2.0",
        "ecpair": "^2.1.0",
        "fast-sha256": "^1.3.0"
    }
